{% stylesheet %}
  .icon-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 24px;
    padding: 64px 24px;
    background: #FCFCF9;
  }

  .icon-row__item {
    text-align: center;
  }

  .icon-row__icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 16px;
    background: linear-gradient(135deg, #A3B18A 0%, #BFCBA8 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
  }

  .icon-row__heading {
    font-family: 'DM Serif Display', serif;
    font-size: 20px;
    margin-bottom: 8px;
    color: #3A3A3A;
  }

  .icon-row__text {
    font-size: 14px;
    color: #6B5E51;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .icon-row {
      grid-template-columns: 1fr;
      padding: 48px 24px;
    }
  }
{% endstylesheet %}

<section class="icon-row">
  {% for block in section.blocks %}
    <div class="icon-row__item">
      <div class="icon-row__icon">{{ block.settings.icon }}</div>
      <h3 class="icon-row__heading">{{ block.settings.title }}</h3>
      <p class="icon-row__text">{{ block.settings.text }}</p>
    </div>
  {% endfor %}
</section>

