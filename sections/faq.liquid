{% stylesheet %}
  .faq {
    padding: 64px 24px;
    max-width: 800px;
    margin: 0 auto;
  }

  .faq__heading {
    font-family: 'DM Serif Display', serif;
    font-size: 36px;
    text-align: center;
    margin-bottom: 48px;
    color: #3A3A3A;
  }

  .faq__item {
    margin-bottom: 16px;
    border: 1px solid #EAE6DD;
    border-radius: 8px;
    overflow: hidden;
  }

  .faq__question {
    background: #F5F1E9;
    padding: 20px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: 'DM Serif Display', serif;
    font-size: 18px;
    color: #3A3A3A;
    transition: all 0.3s ease;
    border: none;
    width: 100%;
    text-align: left;
  }

  .faq__question:hover {
    background: #EAE6DD;
  }

  .faq__question.active {
    background: #BFCBA8;
    color: white;
  }

  .faq__toggle {
    font-size: 20px;
    transition: transform 0.3s ease;
  }

  .faq__question.active .faq__toggle {
    transform: rotate(180deg);
  }

  .faq__answer {
    display: none;
    padding: 20px;
    background: white;
    color: #6B5E51;
    line-height: 1.6;
  }

  .faq__answer.active {
    display: block;
  }

  @media (max-width: 768px) {
    .faq {
      padding: 48px 16px;
    }

    .faq__heading {
      font-size: 28px;
    }

    .faq__question {
      font-size: 16px;
    }
  }
{% endstylesheet %}

<section class="faq">
  {% if section.settings.heading %}
    <h2 class="faq__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% for block in section.blocks %}
    <div class="faq__item">
      <button class="faq__question" onclick="this.classList.toggle('active'); this.nextElementSibling.classList.toggle('active');">
        <span>{{ block.settings.question }}</span>
        <span class="faq__toggle">â–¼</span>
      </button>
      <div class="faq__answer">
        {{ block.settings.answer }}
      </div>
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title",
          "default": "Category"
        }
      ]
    },
    {
      "type": "question",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is this?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "This is the answer to the question."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}
