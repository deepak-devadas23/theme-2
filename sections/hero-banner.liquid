{% stylesheet %}
  .hero-banner {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #A3B18A 0%, #BFCBA8 100%);
    color: white;
    text-align: center;
    overflow: hidden;
  }

  .hero-banner__content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 64px 24px;
  }

  .hero-banner__heading {
    font-family: 'DM Serif Display', serif;
    font-size: 48px;
    line-height: 1.2;
    margin-bottom: 24px;
  }

  .hero-banner__text {
    font-size: 18px;
    margin-bottom: 32px;
    opacity: 0.95;
  }

  .hero-banner__buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-banner__button {
    padding: 16px 32px;
    border: none;
    border-radius: 16px;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .hero-banner__button--primary {
    background: white;
    color: #A3B18A;
  }

  .hero-banner__button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .hero-banner__button--secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .hero-banner__button--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .hero-banner {
      min-height: 400px;
    }

    .hero-banner__heading {
      font-size: 32px;
    }

    .hero-banner__text {
      font-size: 16px;
    }

    .hero-banner__button {
      padding: 12px 24px;
      font-size: 14px;
    }
  }
{% endstylesheet %}

<section class="hero-banner" style="background: linear-gradient(135deg, {{ section.settings.background_color_1 }} 0%, {{ section.settings.background_color_2 }} 100%);">
  <div class="hero-banner__content">
    {% if section.settings.heading %}
      <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.subheading %}
      <p class="hero-banner__text">{{ section.settings.subheading }}</p>
    {% endif %}

    {% if section.settings.button_1_text or section.settings.button_2_text %}
      <div class="hero-banner__buttons">
        {% if section.settings.button_1_text %}
          <a href="{{ section.settings.button_1_link }}" class="hero-banner__button hero-banner__button--primary">
            {{ section.settings.button_1_text }}
          </a>
        {% endif %}

        {% if section.settings.button_2_text %}
          <a href="{{ section.settings.button_2_link }}" class="hero-banner__button hero-banner__button--secondary">
            {{ section.settings.button_2_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Prakriti"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Natural wellness solutions for your complete comfort"
    },
    {
      "type": "color",
      "id": "background_color_1",
      "label": "Gradient Color 1",
      "default": "#A3B18A"
    },
    {
      "type": "color",
      "id": "background_color_2",
      "label": "Gradient Color 2",
      "default": "#BFCBA8"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
