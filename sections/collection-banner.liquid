{% stylesheet %}
  .collection-banner {
    background: linear-gradient(135deg, #A3B18A 0%, #BFCBA8 100%);
    color: white;
    padding: 64px 24px;
    text-align: center;
  }

  .collection-banner__heading {
    font-family: 'DM Serif Display', serif;
    font-size: 48px;
    margin-bottom: 16px;
  }

  .collection-banner__description {
    font-size: 18px;
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .collection-banner {
      padding: 48px 24px;
    }

    .collection-banner__heading {
      font-size: 32px;
    }

    .collection-banner__description {
      font-size: 16px;
    }
  }
{% endstylesheet %}

<section class="collection-banner">
  <h1 class="collection-banner__heading">{{ collection.title }}</h1>
  {% if collection.description %}
    <p class="collection-banner__description">{{ collection.description }}</p>
  {% endif %}
</section>

{% schema %}
{
  "name": "Collection Banner",
  "settings": [],
  "presets": [
    {
      "name": "Collection Banner"
    }
  ]
}
{% endschema %}
